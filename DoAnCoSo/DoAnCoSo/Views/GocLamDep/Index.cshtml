@model List<MyPhamDB.TinTuc_Info>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@{
    var db = new DoAnCoSo.Models.MyPhamEntities();
}
@{
    string ChuyenMucID = ViewBag.ChuyenMucID;
    string TuKhoa = ViewBag.TuKhoa;
}
<div class="blog-main-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-2 order-lg-1">
                <div class="blog-sidebar-wrapper">
                    <div class="blog-sidebar mb-30">
                        <div class="sidebar-serch-form">
                            <form action="@Url.Action("XuLy", "GocLamDep")" method="post">
                                <input type="hidden" name="chuyenmucid" value="@ViewBag.ChuyenMucID" />
                                <input type="text" class="search-field" name="tukhoa" placeholder="Gõ từ khóa">
                                <button type="submit" class="search-btn"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                    </div> <!-- single sidebar end -->
                    <div class="blog-sidebar mb-24">
                        <h4 class="title mb-20">Danh Mục</h4>
                        <ul class="blog-archive">
                            @{
                                List<DoAnCoSo.Models.ChuyenMuc> chuyenmuc = (from s in db.ChuyenMucs select s).ToList();
                                foreach (var item in chuyenmuc)
                                {
                                    <li>
                                        <a href="@Url.Action("Index", "GocLamDep", new { chuyenmucid = item.ID.ToString() })" class="d-flex">
                                            <p>@item.TenChuyenMuc</p>
                                            <p> (@MyPhamDB.ChuyenMuc_Data.SoLuongTinTuc(item.ID.ToString()))</p>
                                        </a>
                                    </li>
                                }
                            }

                        </ul>
                    </div>
                 
                    <div class="blog-sidebar mb-24">
                        <h4 class="title mb-30">Bài viết gần đây</h4>
                        @{
                            List<DoAnCoSo.Models.TinTuc> baiviet = (from s in db.TinTucs orderby s.NgayDang descending select s).Take(5).ToList();
                            foreach (var item in baiviet)
                            {
                                <div class="recent-post mb-20">
                                    <div style="width:100px;height:63px">
                                        <a href="@Url.Action("ChiTiet", "GocLamDep", new { tintucid = @item.ID.ToString() })">
                                            <img src="~/Assets/img/blog/@item.HinhAnh" alt="">
                                        </a>
                                    </div>
                                    <div class="recent-post-des">
                                        <span><a href="@Url.Action("ChiTiet", "GocLamDep", new { tintucid = @item.ID.ToString() })">@item.TenTinTuc</a></span>
                                        <span class="post-date">@item.NgayDang.Value.ToString("dd-MM-yyyy")</span>
                                    </div>
                                </div> <!-- end single popular item -->
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-9 order-1 order-lg-2">
                <div class="blog-wrapper-inner">
                    <div class="row">
                        @{
                            foreach (var item in Model)
                            {
                                <div class="col-lg-6 col-md-6">
                                    <div class="blog-item mb-26">
                                        <div class="blog-thumb img-full fix">
                                            <a href="@Url.Action("ChiTiet", "GocLamDep", new { tintucid = item.Id })">
                                                <img src="~/Assets/img/blog/@item.Hinhanh" alt="">
                                            </a>
                                        </div>
                                        <div class="blog-content">
                                            <h3><a href="@Url.Action("ChiTiet", "GocLamDep", new { tintucid = item.Id })">@item.Tentintuc</a></h3>
                                            <div class="blog-meta">
                                                <span class="posted-author">By: @item.Nguoidang</span>
                                                <span class="post-date">@item.Ngaydang.ToString("dd-MM-yyyy")</span>
                                            </div>
                                            <p>@item.Mota</p>
                                        </div>
                                        <a href="@Url.Action("ChiTiet", "GocLamDep", new { tintucid = item.Id })">Xem Tiếp<i class="fa fa-long-arrow-right"></i></a>
                                    </div>
                                </div>
                            }
                        }
                        @{
                            int tranghientai = 1;
                            if (Request.QueryString["trang"] != null)
                            {
                                tranghientai = int.Parse(Request.QueryString["trang"].ToString());
                            }
                            int trangtruoc = 1;
                            if (tranghientai > 1)
                            {
                                trangtruoc = tranghientai - 1;
                            }
                        }
                    </div>
                </div>
                <!-- start pagination area -->
                <div class="paginatoin-area text-center pt-30 pb-30">
                    <div class="row">
                        <div class="col-12">
                            <ul class="pagination-box">
                                @{

                                    if (tranghientai > 1)
                                    {
                                        <li><a class="Previous" href="@Url.Action("Index", "GocLamDep", new { trang = trangtruoc, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">Trang trước</a></li>

                                    }

                                    int TongSoTinTuc = ViewBag.TongSoTinTuc;
                                    int SoTinTuc = ViewBag.SoTinTuc;
                                    int SoTrang = TongSoTinTuc / SoTinTuc;
                                    if (TongSoTinTuc % SoTinTuc != 0)
                                    {
                                        SoTrang++;
                                    }
                                    int trangHienThi;
                                    if (tranghientai - 2 < 1)
                                    {
                                        trangHienThi = 1;
                                    }
                                    else if (tranghientai + 2 > SoTrang)
                                    {
                                        trangHienThi = SoTrang - 4;
                                        if (trangHienThi < 1)
                                        {
                                            trangHienThi = 1;
                                        }
                                    }
                                    else
                                    {
                                        trangHienThi = tranghientai - 2;
                                    }
                                    if (trangHienThi >= 2)
                                    {

                                        <li>
                                            <a href="@Url.Action("Index", "GocLamDep", new { trang = 1, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">1</a>
                                        </li>
                                        if (trangHienThi != 2)
                                        {
                                            <li><span>...</span></li>
                                        }

                                    }
                                    if (SoTrang < trangHienThi + 4)
                                    {
                                        for (int i = trangHienThi; i <= SoTrang; i++)
                                        {
                                            if (tranghientai == i)
                                            {
                                                <li>
                                                    <a href="@Url.Action("Index", "GocLamDep", new { trang = i, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">@i</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a href="@Url.Action("Index", "GocLamDep", new { trang = i, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">@i</a>
                                                </li>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        for (int i = trangHienThi; i <= trangHienThi + 4; i++)
                                        {
                                            if (tranghientai == i)
                                            {
                                                <li>
                                                    <a href="@Url.Action("Index", "GocLamDep", new { trang = i, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">@i</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a href="@Url.Action("Index", "GocLamDep", new { trang = i, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">@i</a>
                                                </li>
                                            }
                                        }

                                    }
                                    if (trangHienThi < SoTrang - 4)
                                    {
                                        if (trangHienThi + 4 != SoTrang - 1)
                                        {
                                            <li><span>...</span></li>
                                        }

                                        <li>
                                            <a href="@Url.Action("Index", "GocLamDep", new { trang = SoTrang, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">@SoTrang</a>
                                        </li>
                                    }
                                    int trangsau = SoTrang;
                                    if (tranghientai < SoTrang)
                                    {
                                        trangsau = tranghientai + 1;
                                        <li class="Next"><a href="@Url.Action("Index","GocLamDep", new { trang= trangsau, ChuyenMucID=ChuyenMucID, TuKhoa=TuKhoa})">Trang sau</a></li>
                                    }

                                }

                            </ul>

                        </div>
                    </div>
                </div>
                <!-- end pagination area -->
            </div>
        </div>
    </div>
</div>

